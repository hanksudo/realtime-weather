{
  "name": "realtime-weather",
  "version": "0.1.0",
  "description": "A real-time weather dashboard application that displays current conditions and forecasts",
  "private": true,
  "author": "Hank Wang",
  "license": "MIT",
  "keywords": [
    "weather",
    "dashboard",
    "vue",
    "real-time",
    "forecast"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "type-check": "vue-tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "date-fns": "^2.30.0",
    "socket.io-client": "^4.7.2",
    "vue": "^3.3.4",
    "vue-router": "^4.2.4"
  },
  "devDependencies": {
    "@testing-library/vue": "^7.0.0",
    "@types/node": "^18.18.0",
    "@vitest/coverage-v8": "^0.34.6",
    "@vitejs/plugin-vue": "^4.3.4",
    "@vue/test-utils": "^2.4.1",
    "happy-dom": "^12.10.3",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vitest": "^0.34.6",
    "vue-tsc": "^1.8.15"
  }
}
